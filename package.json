{
  "name": "heypoint-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/web",
    "apps/api"
  ],
  "scripts": {
    "dev:web": "npm --workspace apps/web run dev",
    "dev:api": "npm --workspace apps/api run dev",
    "dev": "concurrently -n WEB,API -c cyan,magenta \"npm:dev:web\" \"npm:dev:api\"",
    "build:web": "npm --workspace apps/web run build",
    "build:api": "npm --workspace apps/api run build",
    "start:api": "npm --workspace apps/api start"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
}
